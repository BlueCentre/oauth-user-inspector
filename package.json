{
  "type": "module",
  "name": "oauth-user-inspector",
  "version": "1.0.0",
  "description": "OAuth User Inspector with a secure backend for token exchange.",
  "main": "dist-server/server.js",
  "scripts": {
    "build:server": "tsc -p server/tsconfig.server.json",
    "start": "GOOGLE_CLOUD_PROJECT=gen-lang-client-0352693779 node dist-server/server.js",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:server\"",
    "dev:server": "nodemon --watch server/server.ts --watch server/logger.ts --ext ts --exec \"npm run build:server && node dist-server/server.js\"",
    "dev:frontend": "vite",
    "build:frontend": "vite build",
    "build": "npm run build:frontend && npm run build:server",
    "deploy": "./scripts/deploy.sh",
    "preview": "vite preview",
    "test": "jest",
    "setup-dev": "sh scripts/setup-dev.sh",
    "cleanup:untrack-builds": "git rm -r --cached dist dist-server && git add .gitignore && (git diff --cached --quiet || git commit -m \"chore: untrack build outputs\")"
  },
  "dependencies": {
    "@google-cloud/logging-winston": "^6.0.1",
    "@google-cloud/secret-manager": "^6.1.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "js-base64": "^3.7.8",
    "jwt-decode": "^4.0.0",
    "node-fetch": "^2.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.12.12",
    "@types/node-fetch": "^2.6.11",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.7",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.2.1",
    "jest": "^30.1.1",
    "msw": "^2.11.1",
    "nodemon": "^3.1.0",
    "postcss": "^8.4.31",
    "supertest": "^7.1.4",
    "tailwindcss": "^3.4.0",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "vite": "^6.3.5"
  }
}
